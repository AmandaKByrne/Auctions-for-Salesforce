	           		<apex:inputField value="{!oppTicketAttendee.Number_of_Tickets__c}" required="false" />
	            </apex:pageBlockSection>     
	   				<br/>
					&nbsp;&nbsp;&nbsp;&nbsp;
					<apex:commandButton value="Save Guest" rendered="{!contactIdTicketHolder!=null}" action="{!SaveAttendeeInfo}" />&nbsp;&nbsp;
					<apex:commandButton value="Authorize Credit Card" rendered="{!contactIdTicketHolder!=null}" />&nbsp;&nbsp;
